// Prisma-Schema f√ºr den Office Seating Planner mit Halbtags-Slots (TimeSlot).

datasource db {
  provider = "sqlite"
}

generator client {
  provider  = "prisma-client"
  output    = "../generated/prisma"
}

enum TimeSlot {
  MORNING
  AFTERNOON
}

model Employee {
  id           Int           @id @default(autoincrement())
  name         String
  initials     String
  avatarColor  String
  preferences  Preference[]

  workSchedule WorkSchedule?
  absences     Absence[]
  assignments  Assignment[]
}

model Preference {
  id         Int      @id @default(autoincrement())

  employeeId Int
  employee   Employee @relation(fields: [employeeId], references: [id])

  deskId     Int
  desk       Desk     @relation(fields: [deskId], references: [id])

  /// Wochentag: 1 = Montag, ..., 5 = Freitag
  weekday    Int
  slot       TimeSlot

  @@unique([employeeId, weekday, slot], name: "employeeId_weekday_slot")
}

model WorkSchedule {
  id           Int      @id @default(autoincrement())
  employeeId   Int      @unique
  employee     Employee @relation(fields: [employeeId], references: [id])

  mondayMorning    Boolean  @default(true)
  mondayAfternoon  Boolean  @default(true)
  mondayNote       String?
  tuesdayMorning   Boolean  @default(true)
  tuesdayAfternoon Boolean  @default(true)
  tuesdayNote      String?
  wednesdayMorning Boolean  @default(true)
  wednesdayAfternoon Boolean @default(true)
  wednesdayNote    String?
  thursdayMorning  Boolean  @default(true)
  thursdayAfternoon Boolean @default(true)
  thursdayNote     String?
  fridayMorning    Boolean  @default(true)
  fridayAfternoon  Boolean  @default(true)
  fridayNote       String?
}

model Absence {
  id         Int      @id @default(autoincrement())
  employeeId Int
  employee   Employee @relation(fields: [employeeId], references: [id])

  startDate  DateTime
  endDate    DateTime
  reason     String
}

model Desk {
  id          Int          @id @default(autoincrement())
  label       String
  gridX       Int
  gridY       Int
  gridW       Int
  gridH       Int
  rotation    Int          @default(0)
  titleColor  String?

  assignments Assignment[]
  preferences Preference[]
}

model Assignment {
  id         Int      @id @default(autoincrement())
  date       DateTime
  slot       TimeSlot

  employeeId Int
  employee   Employee @relation(fields: [employeeId], references: [id])

  deskId     Int
  desk       Desk     @relation(fields: [deskId], references: [id])

  @@unique([date, slot, employeeId])
  @@unique([date, slot, deskId])
}

